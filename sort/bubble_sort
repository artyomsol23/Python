def bubble_sort(arr):
    n = len(arr)
    for i in range(n):  # Проходим по всем элементам массива
        swapped = False  # Флаг, который показывает, были ли перестановки
        # Последние i элементов уже на своих местах
        for j in range(0, n-i-1):
            if arr[j] > arr[j+1]:  # Если текущий элемент больше следующего, меняем их местами
                arr[j], arr[j+1] = arr[j+1], arr[j]
                swapped = True
        if not swapped:  # Если перестановок не было, массив уже отсортирован
            break

# Пример использования
if __name__ == "__main__":
    data = [64, 34, 25, 12, 22, 11, 90]
    print("Неотсортированный массив:", data)
    
    bubble_sort(data)
    
    print("Отсортированный массив:", data)
