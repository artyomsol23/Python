def bubble_sort(arr):
    n = len(arr)
    # Проходим по всем элементам массива
    for i in range(n):
        # Флаг, который показывает, были ли перестановки
        swapped = False
        # Последние i элементов уже на своих местах
        for j in range(0, n-i-1):
            # Если текущий элемент больше следующего, меняем их местами
            if arr[j] > arr[j+1]:
                arr[j], arr[j+1] = arr[j+1], arr[j]
                swapped = True
        # Если перестановок не было, массив уже отсортирован
        if not swapped:
            break

# Пример использования
if __name__ == "__main__":
    data = [64, 34, 25, 12, 22, 11, 90]
    print("Неотсортированный массив:", data)
    
    bubble_sort(data)
    
    print("Отсортированный массив:", data)
