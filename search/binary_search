def binary_search(arr, target):
    left, right = 0, len(arr) - 1
    while left <= right:
        mid = (left + right) // 2
        if arr[mid] == target:
            return mid
        elif arr[mid] < target:
            left = mid + 1
        else:
            right = mid - 1
    return -1  # Если элемент не найден

arr = [10, 20, 30, 40, 50]
target = 40
print("Индекс элемента:", binary_search(arr, target))  # Вывод: 3
