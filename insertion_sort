def insertion_sort(arr):  # Проходим по всем элементам, начиная со второго
    for i in range(1, len(arr)):
        key = arr[i]  # Текущий элемент, который нужно вставить
        j = i - 1     # Индекс предыдущего элемента
        
        while j >= 0 and arr[j] > key:  # Сдвигаем элементы большие, чем key, вправо
            arr[j + 1] = arr[j]
            j -= 1
        
        arr[j + 1] = key  # Вставляем key в правильную позицию

# Пример использования
arr = [12, 11, 13, 5, 6]
print("До сортировки:", arr)

insertion_sort(arr)
print("После сортировки:", arr)
